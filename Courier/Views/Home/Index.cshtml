@model Courier.Models.ViewModels.join

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron head1">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <div class="banner-content">
                    <h1>Welcome to  ShpimentPRO</h1>
                    <h3>
                       Best Service to send your package around the world

                    </h3>
                    <a href="@Url.Action("index","Home")#about" class="btn btn-site btn-lg page-scroll">Get a quota</a>
