@model Courier.Models.DbModel.Order
    @{
        ViewBag.Title = "EditOrder";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }

    <div class="templatemo-flex-row flex-content-row">
        <!-- overflow hidden for iPad mini landscape view-->
        <div class="col-1 templatemo-overflow-hidden">
            <div>

                <div class="templatemo-flex-row flex-content-row">
                    <div class="col-12 col-lg-12 col-md-12">
                        <h2>Create a new Order</h2>
                        <a class="text-right btn btn-success" href="@Url.Action("Order","Admin")">back to order list </a>

                        
                        <div class="my-form">
                            <h4>Edit @Model.Packagename by @Model.User.Email</h4>
                            @using (Html.BeginForm("EditOrder", "Admin", new { id = Model.OrderID }))
                            {
                                @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.Label("Package name", new { @class = "control-label " })

                                @Html.TextBoxFor(model => model.Packagename, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Describtion", new { @class = "control-label " })

                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Weight", new { @class = "control-label " })

                                @Html.TextBoxFor(model => model.weight, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("Height", new { @class = "control-label " })

                                @Html.TextBoxFor(model => model.height, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                @Html.Label("width", new { @class = "control-label " })

                                @Html.TextBoxFor(model => model.width, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                              <button type="submit" class="btn btn-custom"> Make Changes</button>
                                <a href="@Url.Action("LocationUpdate",new  {id =Model.OrderID })" class="btn btn-custom btn-primary" > Edit Location</a>
                            </div>

                            }
                           
                         </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


