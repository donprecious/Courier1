    <![endif]-->

</head>
<body>
    <div>
        <div class="templatemo-flex-row">
            <!-- Side navigation -->
            <div class="templatemo-sidebar">
                <header class="templatemo-site-header">
                    <div class="square"></div>
                    <h1>Visual Admin</h1>
                </header>
              
                <!-- Search box -->
                <form class="templatemo-search-form" role="search">
                    <div class="input-group">
                        <button type="submit" class="fa fa-search"></button>
                        <input type="text" class="form-control " placeholder="Search" name="srch-term" id="srch-term">
                    </div>
                </form>
                <div class="mobile-menu-icon">
                    <i class="fa fa-bars"></i>
                </div>
                <nav class="templatemo-left-nav">
                    <ul>
                        <li><a href="@Url.Action("index","Admin")" class="active"><i class="fa fa-home fa-fw"></i>Dashboard</a></li>
                        <li><a href="@Url.Action("Order","Admin")"><i class="fa fa-bars fa-fw"></i>Orders</a></li>
                        <li><a href="@Url.Action("Supports","Admin")"><i class="fa fa-database fa-fw"></i>Supports</a></li>
                   
                        <li><a href="@Url.Action("Users","Admin")"><i class="fa fa-users fa-fw"></i>Manage Users</a></li>
                        @*<li><a href="#"><i class="fa fa-sliders fa-fw"></i>Preferences</a></li>
                        <li><a href="#"><i class="fa fa-eject fa-fw"></i>Sign Out</a></li>*@
                     @*@using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                     {
                         @Html.AntiForgeryToken()*@
                        <li><a href="@Url.Action("logout","account")"> <i class="fa fa-eject fa-fw"></i>Log off</a></li>
                     @*}*@
                 <li >

                     </ul >
                 </nav >
             </div >
           
            <!-- Main content -->
            <div class="templatemo-content col-1 light-gray-bg">
                <!-- Top header -->
                <div class="templatemo-top-nav-container">
                    <div class="row">
                        <nav class="templatemo-top-nav col-lg-12 col-md-12">
                            <ul class="text-uppercase">
                                <li><a href = "@Url.Action("index","Admin")" class="active">Dashboad</a></li>
                                <li><a href = "@Url.Action("CreateOrder","Admin")">Create Order</a></li>
                                <li><a href = "@Url.Action("Quotas","Admin")">View Quota</a></li>
                                <li><a href = "@Url.Action("Order","Admin", new {id="1" })">View Orders</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>

                <!-- Other content -->
                @RenderBody()

                <footer class="text-right">
                    <p>
                        Copyright &copy; @DateTime.UtcNow.Year

                    </p>
                </footer>

            </div>


        </div>
       </div>


    <!-- JS -->
    <script src = "@Url.Content("~/js/jquery-2.2.3.min.js")" ></script >
    <script src="@Url.Content("~/js/jquery-migrate-1.3.0.min.js")"></script>
    <script src = "https://www.google.com/jsapi" ></script >
    <script type="text/javascript" src="@Url.Content("~/js/bootstrap.js)")"></script>
